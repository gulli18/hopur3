@model BookCave.Models.InputModels.InputPaymentModel

<div class="container">
  <div class="row" id="billing-address">
    <div class="col-lg-3">
      <h3>Delivery Information</h3>
    </div>
  </div>
  <div class="row">
    <form asp-controller="Payment" asp-action="Delivery" method="POST">
      <div class="col-lg-5">
        <div class="form-group">
          <h4>Shipping Information:</h4>
          <label for="street">Street Address:</label>
          <input type="text" class="form-control" id="street" asp-for="ShippingStreetAdress" 
          placeholder="Street Address" value="@Model.ShippingStreetAdress">
        </div>
        <div class="form-group">
          <label for="city">City:</label>
          <input type="text" class="form-control" id="city" asp-for="ShippingTownCity"
          placeholder="City" value="@Model.ShippingTownCity">
        </div>
        <div class="form-group">
          <label for="zip">Zip Code:</label>
          <input type="text" class="form-control" id="zip" asp-for="ShippingPostcode"
          placeholder="Zip Code" value="@Model.ShippingPostcode">
        </div>
        <div class="form-group">
          <label for="country">Country:</label>
          <input type="text" class="form-control" id="country" asp-for="ShippingCountry"
          placeholder="Country" value="@Model.ShippingCountry">
        </div>
        <div class="form-group">
          <input type="submit" value="Update" class="btn btn-primary">
        </div>
      </div>
      <div class="col-lg-1"></div>
      <div class="col-lg-5">
        <h4>Billing Information:</h4>
          <div class="form-group">
          <label for="street">Street Address:</label>
          <input type="text" class="form-control" id="street" asp-for="BillingStreetAdress" 
          placeholder="Street Address" value="@Model.BillingStreetAdress">
        </div>
        <div class="form-group">
          <label for="city">City:</label>
          <input type="text" class="form-control" id="city" asp-for="BillingTownCity"
          placeholder="City" value="@Model.BillingTownCity">
        </div>
        <div class="form-group">
          <label for="zip">Zip Code:</label>
          <input type="text" class="form-control" id="zip" asp-for="BillingZipPostcode"
          placeholder="Zip Code" value="@Model.BillingZipPostcode">
        </div>
        <div class="form-group">
          <label for="country">Country:</label>
          <input type="text" class="form-control" id="country" asp-for="ShippingCountry"
          placeholder="Country" value="@Model.BillingCountry">
        </div>
      </div>
    </form>
  </div>
  <div class="row" id="buttons">
    <a id="back-to-cart" asp-controller="Cart" asp-action="Index" class="btn btn-primary">Back To Cart</a>
    <a id="back-to-payment" asp-controller="Payment" asp-action="Pay" class="btn btn-primary">Go To Payment</a>
  </div>
</div>



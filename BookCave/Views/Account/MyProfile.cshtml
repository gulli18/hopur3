@model BookCave.Models.ViewModels.ProfileViewModel 
<h2>Profile Information</h2>
<form asp-action="MyProfile" asp-controller="Account" class="form-horizontal" method="POST">
  <div class="form-group">
    <input type="text" autofocus="autofocus" class="form-control" asp-for="FirstName"
     placeholder="Enter your first name.." value="@Model.FirstName">
  </div>
  <div class="form-group">
    <input type="text" class="form-control" asp-for="LastName"
     placeholder="Enter your last name.." value="@Model.LastName">
  </div>
  <div class="form-group">
    <input type="text" class="form-control" asp-for="FavoriteBook"
     placeholder="Enter your favorite book.." value="@Model.FavoriteBook">
  </div>
  <div class="form-group">
    <input type="number" class="form-control" asp-for="Age"
     placeholder="Enter your age.." value="@Model.Age">
   <div class="form-group">
    <input type="text"  class="form-control" asp-for="Image"
     placeholder="Enter your image url.." value="@Model.Image">
  </div>
  <div class="form-group">
    <input type="submit" value="Update Profile" class"btn btn-default">
  </div>

  <a <a asp-area="" asp-controller="Account" asp-action="MyBillingAddress">Billing Address</a>
  <a <a asp-area="" asp-controller="Account" asp-action="MyShippingAddress">Shipping Address</a>

</form>
@model BookCave.Models.ViewModels.RegisterViewModel

<div class="container">
  <div class="row" id="register-heading">
    <h2>Register</h2>
  </div>
  <div class="row" id="register-info">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <form asp-controller="Account" asp-action="Register">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name">
        </div>
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name">
        </div>
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
          <input asp-for="Email" type="text" class="form-control" placeholder="Email">
        </div>
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <input asp-for="Password" type="password" class="form-control" placeholder="Password">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-lg">Register</button>
        </div>
      </form>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>


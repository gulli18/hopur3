@model BookCave.Models.ViewModels.BillingAddressViewModel

<h2>Billing Information</h2>
<form asp-action="MyBillingAddress" asp-controller="Account" class="form-horizontal" method="POST">
  <div class="form-group">
    <input type="text" autofocus="autofocus" class="form-control" asp-for="PropertyName"
     placeholder="Enter your property name.." value="@Model.PropertyName">
  </div>
  <div class="form-group">
    <input type="text" class="form-control" asp-for="StreetAdress"
     placeholder="Enter your street address.." value="@Model.StreetAdress">
  </div>
  <div class="form-group">
    <input type="text" class="form-control" asp-for="TownCity"
     placeholder="Enter your town city.." value="@Model.TownCity">
  </div>
  <div class="form-group">
    <input type="text" class="form-control" asp-for="ZipPostcode"
     placeholder="Enter your zip post code.." value="@Model.ZipPostcode">
   <div class="form-group">
    <input type="text"  class="form-control" asp-for="Country"
     placeholder="Enter your country.." value="@Model.Country">
  </div>
  <div class="form-group">
    <input type="submit" value="Update Billing Information" class"btn btn-default">
  </div>
</form>
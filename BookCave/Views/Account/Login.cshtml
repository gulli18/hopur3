@model BookCave.Models.ViewModels.LoginViewModel

<div class="container">
  <div class="row" id="login-heading">
    <h2>Login</h2>
  </div>
  <div class="row" id="login-info">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <form asp-controller="Account" asp-action="Login">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
          <input asp-for="Email" type="text" class="form-control" placeholder="Email">
        </div>
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <input asp-for="Password" type="password" class="form-control" placeholder="Password">
        </div>
        <div class="checkbox">
          <input type="checkbox" asp-for="RememberMe"> Remember Me
        </div>
        <a asp-controller="Account" asp-action="Register">Don't have an account? Click here to sign up!</a>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-lg">Log In</button>
        </div>
      </form>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>


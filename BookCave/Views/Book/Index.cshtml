@model List<BookCave.Models.ViewModels.BookListViewModel>

<h2>Search results for @ViewBag.searchTerm</h2>
<div>
    @foreach (var book in @Model)
    {
        <p>@book.Title</p>
        <p>@book.Author</p>
        <p>@book.Rating</p>
        <p>@book.Price</p>
        <p>@book.Format</p>
        <img src="@book.Image" alt="book-cover">
        <form method="post" asp-controller="Cart" asp-action="Index">
            <button type="submit" name="Id" class="btn btn-primary" value="@book.Id">Add to cart</button>
        </form>
    }
</div>
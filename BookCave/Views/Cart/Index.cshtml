@model List<BookCave.Models.ViewModels.BookListViewModel>

<div class="container">
    <div class="row" id="cart-container">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <h2 id="cart-header">Shopping Cart</h2>
            <div id="show-cart"></div>
            <button id="clear-button" type="button" class="btn btn-default">Clear Cart</button>
        </div>
        <div class="col-lg-4"></div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-3">
                <a id="cont-shop" class="btn btn-primary" asp-controller="Home" asp-action="Index">Continue Shopping</a>
            </div>
            <div class="col-lg-6"></div>
            <div class="col-lg-3">
                <a id="checkout" type="button" class="btn btn-primary" asp-controller="Payment" asp-action="Delivery">Checkout</a>
            </div>
        </div>
    </div>
</div>

